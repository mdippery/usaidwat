#!/usr/bin/env ruby

require 'usaidwat'
require 'usaidwat/commands'


def die(code=1)
  $stderr.puts "usaidwat v#{USaidWat::VERSION}"
  $stderr.puts "Usage: #{File.basename $0} <user> [<subreddit>]"
  exit code
end

die if ARGV.length < 1 or ARGV.length > 2
if ARGV.length == 1
  USaidWat::Commands.count
else
  USaidWat::Commands.subreddit
end
